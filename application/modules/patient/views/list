    <script>
        // Simple form functionality
        document.querySelector('.btn-new').addEventListener('click', function() {
            if(confirm('Are you sure you want to create a new registration? All unsaved data will be lost.')) {
                // Reset form fields
                const inputs = document.querySelectorAll('input:not([readonly])');
                inputs.forEach(input => input.value = '');
                
                const selects = document.querySelectorAll('select');
                selects.forEach(select => select.selectedIndex = 0);
                
                // Set default values
                document.getElementById('sex').value = 'male';
                document.getElementById('religion').value = 'islam';
                
                alert('Form cleared. Ready for new registration.');
            }
        });
        
        document.querySelector('.btn-save').addEventListener('click', function() {
            // Simple validation
            const patientName = document.getElementById('patient-name').value;
            if(!patientName) {
                alert('Please enter patient name');
                return;
            }
            
            // In a real application, this would send data to server
            alert('Registration saved successfully!');
        });
        
        document.querySelector('.btn-print').addEventListener('click', function() {
            window.print();
        });
    </script>
